{% extends 'base.html.twig' %}

{% block title %}User Details{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="display-4 mb-4">User Details</h1>

        <div class="card shadow-sm">
            <div class="card-body">
                <table class="table table-borderless">
                    <tbody>
                        <tr>
                            <th scope="row" class="text-muted">ID</th>
                            <td>{{ user.id }}</td>
                        </tr>
                        <tr>
                            <th scope="row" class="text-muted">Email</th>
                            <td>{{ user.email }}</td>
                        </tr>
                        <tr>
                            <th scope="row" class="text-muted">Roles</th>
                            <td>{{ user.roles ? user.roles|json_encode : 'No roles assigned' }}</td>
                        </tr>
                        <tr>
                            <th scope="row" class="text-muted">Password</th>
                            <td>••••••••</td> {# Masquer le mot de passe pour des raisons de sécurité #}
                        </tr>
                        <tr>
                            <th scope="row" class="text-muted">First Name</th>
                            <td>{{ user.firstName }}</td>
                        </tr>
                        <tr>
                            <th scope="row" class="text-muted">Last Name</th>
                            <td>{{ user.lastName }}</td>
                        </tr>
                        <tr>
                            <th scope="row" class="text-muted">Phone</th>
                            <td>{{ user.phone }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-4">
            <a href="{{ path('app_user_index') }}" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-primary">
                <i class="fas fa-edit"></i> Edit
            </a>
            {{ include('user/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}