{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block page_content %}
    <div class="container mt-5">
        <header class="text-center mb-5 mt-5">
            <h1 class="display-4 chantier-name">Liste des Employés</h1>
            <p class="lead text-muted">Vous trouverez la listes des employées</p>
        </header>

        <div class="row">
            {% for user in users %}
                <div class="col-md-4 mb-4">
                    <div class="card shadow-lg border-0 rounded-3">
                        <div class="card-body">
                            <h5 class="card-title">{{ user.firstName }} {{ user.lastName }}</h5>
                            <h6 class="card-subtitle mb-2 text-muted">{{ user.email }}</h6>
                            <p class="card-text">
                                <strong>Téléphone :</strong> {{ user.phone }}<br>
                                <strong>Roles :</strong> {{ user.roles ? user.roles|join(', ') : 'No roles' }}
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn show btn-sm text-white">
                                    <i class="fas fa-eye"></i> Voir
                                </a>
                                <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn edit btn-sm btn-outline-secondary">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="alert alert-info" role="alert">
                        No users found.
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="mt-4">
            <a href="{{ path('app_user_new') }}" class="btn view">
                <i class="fas fa-plus"></i> Créer un nouvel employé
            </a>
        </div>
    </div>
{% endblock %}


{% block stylesheets %}
<style>

   .chantier-name {
        color: #434255;
        font-weight: bold;
    }
    .view {
           background-color: #52516b;
           color: white;
           padding: 10px 20px;
        }
       .view:hover {
            background-color: #434255;
        color: white;   
        }

        .show {
            background-color: #ed9108!important;
            border: none;
            padding: 5px 10px;
        }
                .edit {
            padding: 5px 10px;
        }
</style>
{% endblock %}

