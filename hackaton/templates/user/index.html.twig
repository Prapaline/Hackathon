{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">User Index</h1>

        <div class="row">
            {% for user in users %}
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">{{ user.firstName }} {{ user.lastName }}</h5>
                            <h6 class="card-subtitle mb-2 text-muted">{{ user.email }}</h6>
                            <p class="card-text">
                                <strong>Phone:</strong> {{ user.phone }}<br>
                                <strong>Roles:</strong> {{ user.roles ? user.roles|join(', ') : 'No roles' }}
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-eye"></i> Show
                                </a>
                                <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-sm btn-outline-secondary">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="alert alert-info" role="alert">
                        No users found.
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="mt-4">
            <a href="{{ path('app_user_new') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Create New User
            </a>
        </div>
    </div>
{% endblock %}