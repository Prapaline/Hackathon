{% extends 'base.html.twig' %}

{% block title %}Créer un Nouvel Employé{% endblock %}

{% block body %}

    
    <div class="d-flex">
        <div class="">
            {% include 'includes/navbar.html.twig' %}
        </div>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <!-- Titre -->
                <h1 class="mb-4 text-center">Créer un Nouvel Employé</h1>

                <!-- Début du formulaire -->
                {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}

                <!-- Champ Email -->
                <div class="mb-4">
                    {{ form_label(form.email, 'Adresse Email', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.email, {'attr': {'class': 'text-danger'}}) }}
                </div>

                <!-- Champ Prénom -->
                <div class="mb-4">
                    {{ form_label(form.first_name, 'Prénom', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.first_name, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.first_name, {'attr': {'class': 'text-danger'}}) }}
                </div>

                <!-- Champ Nom -->
                <div class="mb-4">
                    {{ form_label(form.last_name, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.last_name, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.last_name, {'attr': {'class': 'text-danger'}}) }}
                </div>

                <!-- Champ Téléphone -->
                <div class="mb-4">
                    {{ form_label(form.phone, 'Numéro de Téléphone', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.phone, {'attr': {'class': 'text-danger'}}) }}
                </div>


                <!-- Bouton Soumettre -->
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success px-5">Enregistrer</button>
                </div>

                {{ form_end(form) }}

            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <style>
        .form-control {
            border-radius: 6px;
        }

        .btn-success {
            font-weight: 600;
            padding: 10px 30px;
        }

        .btn-outline-secondary {
            font-weight: 600;
            padding: 10px 30px;
            border-radius: 6px;
        }

        h1 {
            font-weight: bold;
            color: #343a40;
        }

        .mb-4 {
            margin-bottom: 1.5rem;
        }

        .form-label {
            font-weight: 500;
            color: #495057;
        }

        .form-control:focus {
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
            border-color: #007bff;
        }

        .text-danger {
            font-size: 0.875rem;
            color: #dc3545;
        }
    </style>
{% endblock %}
