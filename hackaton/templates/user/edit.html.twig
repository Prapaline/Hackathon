{% extends 'base.html.twig' %}

{% block title %}Modifier l'employé{% endblock %}

{% block page_content %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">

                <!-- En-tête -->
                <header class="text-center mb-4">
                    <h1 class="display-5 fw-bold chantier-name">Modifier l'employé</h1>
                    <p class="lead text-muted">Mettez à jour les informations de cet employé</p>
                </header>

                <!-- Carte formulaire de modification -->
                <div class="card shadow-lg border-0 rounded-4">
                    <div class="card-body p-4">
                        <h5 class="card-title mb-4 text-center">Informations de l'Employé</h5>

                        <!-- Formulaire d'édition -->
                        <div class="mb-4">
                            {{ include('user/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
                        </div>

                    </div>
                </div>

                <!-- Section Chantiers associés -->
                <div class="mt-5">
                    <h5 class="text-center mb-3">Chantiers associés</h5>
                    <div class="card shadow-sm border-0 rounded-3">
                        <div class="card-body">
                            {% if user.userChantiers|length > 0 %}
                                <ul class="list-group list-group-flush">
                                    {% for userChantier in user.userChantiers %}
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <span>
                                                <strong>{{ userChantier.chantier.name }}</strong><br>
                                                <small class="text-muted">Début : {{ userChantier.startDate|date('d-m-Y') }} | Fin : {{ userChantier.endDate|date('d-m-Y') }}</small>
                                            </span>
                                        </li>
                                    {% endfor %}
                                </ul>
                            {% else %}
                                <p class="text-muted text-center">Aucun chantier associé</p>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <!-- Formulaire de suppression centré -->
                <div class="mt-5 text-center">
                    <h5 class="mb-3 text-danger">Supprimer cet employé</h5>
                    <div class="d-inline-block">
                        {{ include('user/_delete_form.html.twig') }}
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
<style>
    .chantier-name {
        color: #434255;
        font-weight: bold;
    }

    .btn-outline-secondary {
        padding: 10px 20px;
        font-weight: 500;
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: bold;
        color: #343a40;
    }

    .list-group-item {
        background-color: #f8f9fa;
        border: none;
        border-bottom: 1px solid #dee2e6;
    }

    .list-group-item:last-child {
        border-bottom: none;
    }

    .btn-danger {
        padding: 10px 25px;
        font-weight: bold;
    }

    form[name="delete_form"] button {
        padding: 10px 20px;
        font-size: 1rem;
        background-color: #dc3545;
        border: none;
        color: white;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    form[name="delete_form"] button:hover {
        background-color: #c82333;
    }

    /* Form styling inside _form.html.twig can be adjusted too if needed */
</style>
{% endblock %}
