{% extends 'base.html.twig' %}

{% block title %}Modifier le Chantier - {{ parent() }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card shadow-sm">
            <div class="card-body">
                <h1 class="card-title mb-4">Modifier le Chantier</h1>

                {# Formulaire #}
                <div class="mb-4">
                    {{ include('chantier/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
                </div>

                {# Boutons de navigation #}
                <div class="d-flex justify-content-between align-items-center">
                    <a href="{{ path('app_chantier_index') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Retour à la liste
                    </a>

                    {# Formulaire de suppression #}
                    {{ include('chantier/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}