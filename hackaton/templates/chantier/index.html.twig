{% extends 'base.html.twig' %}

{% block title %}Chantier index{% endblock %}

{% block body %}
    <h1>Tous les Chantiers</h1>

    <div class="row">
        {% for chantier in chantiers %}
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">{{ chantier.name }}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">{{ chantier.location }}</h6>
                        <p class="card-text">{{ chantier.description }}</p>
                        <p class="card-text"><strong>Status:</strong> {{ chantier.status }}</p>
                        <p class="card-text"><strong>Start Date:</strong> {{ chantier.startDate ? chantier.startDate|date('Y-m-d') : 'N/A' }}</p>
                        <p class="card-text"><strong>End Date:</strong> {{ chantier.endDate ? chantier.endDate|date('Y-m-d') : 'N/A' }}</p>
                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_chantier_show', {'id': chantier.id}) }}" class="btn btn-info btn-sm">View</a>
                            <a href="{{ path('app_chantier_edit', {'id': chantier.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <p>No records found</p>
        {% endfor %}
    </div>

    <a href="{{ path('app_chantier_new') }}" class="btn btn-primary mt-4">Create New</a>
{% endblock %}
