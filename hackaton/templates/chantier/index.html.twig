{% extends 'base.html.twig' %}

{% block title %}Chantier index{% endblock %}

{% block body %}
    <h1>Chantier index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Location</th>
                <th>Description</th>
                <th>Status</th>
                <th>Start_date</th>
                <th>End_date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chantier in chantiers %}
            <tr>
                <td>{{ chantier.id }}</td>
                <td>{{ chantier.name }}</td>
                <td>{{ chantier.location }}</td>
                <td>{{ chantier.description }}</td>
                <td>{{ chantier.status }}</td>
                <td>{{ chantier.startDate ? chantier.startDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ chantier.endDate ? chantier.endDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_chantier_show', {'id': chantier.id}) }}">show</a>
                    <a href="{{ path('app_chantier_edit', {'id': chantier.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_chantier_new') }}">Create new</a>
{% endblock %}
