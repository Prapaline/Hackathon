{% extends 'base.html.twig' %}

{% block title %}Chantier Details{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="display-4 mb-4">Chantier Details</h1>

        <div class="card shadow-sm">
            <div class="card-body">
                <table class="table table-borderless">
                    <tbody>
                        <tr>
                            <th scope="row" class="text-muted">ID</th>
                            <td>{{ chantier.id }}</td>
                        </tr>
                        <tr>
                            <th scope="row" class="text-muted">Name</th>
                            <td>{{ chantier.name }}</td>
                        </tr>
                        <tr>
                            <th scope="row" class="text-muted">Location</th>
                            <td>{{ chantier.location }}</td>
                        </tr>
                        <tr>
                            <th scope="row" class="text-muted">Description</th>
                            <td>{{ chantier.description }}</td>
                        </tr>
                        <tr>
                            <th scope="row" class="text-muted">Status</th>
                            <td>{{ chantier.status }}</td>
                        </tr>
                        <tr>
                            <th scope="row" class="text-muted">Start Date</th>
                            <td>{{ chantier.startDate ? chantier.startDate|date('Y-m-d H:i:s') : 'N/A' }}</td>
                        </tr>
                        <tr>
                            <th scope="row" class="text-muted">End Date</th>
                            <td>{{ chantier.endDate ? chantier.endDate|date('Y-m-d H:i:s') : 'N/A' }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-4">
            <a href="{{ path('app_chantier_index') }}" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
            <a href="{{ path('app_chantier_edit', {'id': chantier.id}) }}" class="btn btn-primary">
                <i class="fas fa-edit"></i> Edit
            </a>
            {{ include('chantier/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}