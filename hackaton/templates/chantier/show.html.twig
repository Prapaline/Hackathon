{% extends 'base.html.twig' %}

{% block title %}Chantier{% endblock %}

{% block body %}
    <h1>Chantier</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ chantier.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ chantier.name }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ chantier.location }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ chantier.description }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ chantier.status }}</td>
            </tr>
            <tr>
                <th>Start_date</th>
                <td>{{ chantier.startDate ? chantier.startDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>End_date</th>
                <td>{{ chantier.endDate ? chantier.endDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_chantier_index') }}">back to list</a>

    <a href="{{ path('app_chantier_edit', {'id': chantier.id}) }}">edit</a>

    {{ include('chantier/_delete_form.html.twig') }}
{% endblock %}
