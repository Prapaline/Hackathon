{% extends 'base.html.twig' %}

{% block title %}Edit Chantier{% endblock %}

{% block body %}
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <h1 class="text-center mb-4">Editer Chantier</h1>
      <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body">
          {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
          
          <!-- Form Fields -->
          <div class="mb-3">
            {{ form_row(form.user, {'attr': {'class': 'form-control'}}) }}
          </div>
          
          <div class="mb-3">
            {{ form_row(form.start_date, {'attr': {'type': 'datetime-local', 'class': 'form-control'}}) }}
          </div>

          <div class="mb-3">
            {{ form_row(form.end_date, {'attr': {'type': 'datetime-local', 'class': 'form-control'}}) }}
          </div>
          
          <!-- Submit Button -->
          <div class="text-center mt-3">
            <button type="submit" class="btn btn-success">
              Enregistrer
            </button>
          </div>
          
          {{ form_end(form) }}
        </div>
      </div>

      <!-- Error Messages -->
      {% if app.flashes('error') %}
      <div class="alert alert-danger mt-3">
        {% for message in app.flashes('error') %}
            <p>{{ message }}</p>
        {% endfor %}
      </div>
      {% endif %}
    </div>
  </div>
</div>
{% endblock %}

{% block stylesheets %}
<style>
  body {
    background-color: #f8f9fa;
  }
  h1 {
    font-weight: bold;
    color: #343a40;
  }
  .card {
    border-radius: 15px;
  }
  .btn-success {
    font-weight: 600;
    padding: 10px 30px;
  }
  .form-control {
    border-radius: 6px;
    padding: 10px 12px;
    font-size: 1rem;
    background-color: #fff;
    transition: border-color 0.3s ease;
  }
  .form-control:focus {
    border-color: #80bdff;
    box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
    outline: none;
  }
  .alert-danger {
    font-weight: 500;
  }
</style>
{% endblock %}
